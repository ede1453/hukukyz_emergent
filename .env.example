# HukukYZ Environment Variables

# ======================
# LLM API Keys
# ======================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional

# ======================
# Database Connections
# ======================
# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for cloud

# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=hukukyz_db

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ======================
# MCP Server URLs
# ======================
MCP_LEGAL_DOCUMENTS_URL=http://localhost:8080
MCP_DOCUMENT_PROCESSOR_URL=http://localhost:8081
MCP_WEB_SEARCH_URL=http://localhost:8082
MCP_VERSION_CONTROL_URL=http://localhost:8083
MCP_KNOWLEDGE_BASE_URL=http://localhost:8084

# ======================
# External APIs
# ======================
# Web Search
TAVILY_API_KEY=your_tavily_api_key_here  # Optional
SERPAPI_KEY=your_serpapi_key_here  # Alternative

# ======================
# Application Config
# ======================
# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Frontend
REACT_APP_BACKEND_URL=http://localhost:8001
REACT_APP_WS_URL=ws://localhost:8001

# ======================
# Security
# ======================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # seconds

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ORIGINS=*

# ======================
# Telegram Bot (Optional)
# ======================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=

# ======================
# Embeddings
# ======================
EMBEDDING_MODEL=text-embedding-3-large  # OpenAI model
EMBEDDING_DIMENSION=1536

# Alternative embedding providers
COHERE_API_KEY=  # Optional
VOYAGEAI_API_KEY=  # Optional

# ======================
# Monitoring & Logging
# ======================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SENTRY_DSN=  # Optional for error tracking

# Prometheus
METRICS_ENABLED=true
METRICS_PORT=9090

# ======================
# Performance Tuning
# ======================
# Cache TTL (seconds)
CACHE_TTL_EMBEDDINGS=86400  # 24 hours
CACHE_TTL_QUERIES=900  # 15 minutes
CACHE_TTL_ARTICLES=3600  # 1 hour

# Retrieval Config
RETRIEVAL_TOP_K=20
RERAN K_TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Agent Config
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT=300  # seconds

# ======================
# Feature Flags
# ======================
ENABLE_WEB_SEARCH=true
ENABLE_MEMORY_SYSTEMS=false
ENABLE_RED_TEAMING=false
ENABLE_EVALUATION=true

# ======================
# Upload Config
# ======================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt
UPLOAD_DIR=/tmp/uploads

# ======================
# Development Only
# ======================
DEV_MODE=true
HOT_RELOAD=true
SHOW_AGENT_REASONING=true
